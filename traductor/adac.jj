void instruccion():
{

}
{
	try{
		inst_escribir() <tPC> 
		| inst_escribir_linea() <tPC> 
		| inst_return() <tPC> 
		| inst_saltar_linea() <tPC> 
		| inst_leer() <tPC>
		| inst_iteracion()
		| inst_seleccion()
		| LOOKAHEAD(2)
			inst_invoc_proc() <tPC> 
		| inst_asignacion() <tPC> 
	} catch (ParseException e) {
		Set<Integer> conjSinc = infoParseException(e);
		conjSinc.add(tPC);
		recuperacionPanico(e.currentToken.next, conjSinc);
	}
}

