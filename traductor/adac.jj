//<tINT> | <tCHAR> | <tBOOL>
Symbol.Types tipo_variable():
{

}
{
	<tINT> 
		{
			return Symbol.Types.INT;
		}
	| <tCHAR> 
		{
			return Symbol.Types.CHAR;
		}
	| <tBOOL>
		{
			return Symbol.Types.BOOL;
		}
}

//variable() ( <tC> variable() )*
void lista_vars(Symbol.Types tp):
{
}
{
	variable(tp) ( <tC> variable(tp) )*
}

/*
	LOOKAHEAD(2)
	<tID> <tISQBR> <tVINT> <tESQBR>
	| <tID>
*/
void variable(Symbol.Types tp):
{
	Token t1, t2;
	//Attributes at1 = new Attributes();
	Sysmol s = null;
}
{
	LOOKAHEAD(2)
	t1 = <tID> 
	<tISQBR> 
	t2 = <tVINT> 
	<tESQBR>
	{
		//crear e instertar el simbolo
		try{
			s = new SymbolArray(t1.image, 0, Integer.parseInt(t2.image)-1,tp);
			st.insertSymbol(s);
		} 
		catch (AlreadyDefinesSymbolException e) {
			ErrorSemantico.deteccion(e, t1);
		}
		//at.code = t1.image + "[" +t2.image + "]";
		//por que no comporbar el tipo del vector?
	}
	
	| t1 = <tID>
		{ //crear e insertar el simbolo
			if(tp == Symbol.Types.INT)
				s = new SymbolInt(t1.image);
			}
			else if(tp == Symbol.Types.CHAR){
				s = new SymbolChar(t1.image);
			}
			else{ //tp == Symbol.Types.BOOL
				s = new SymbolBool(t1.image);
			}
			try{
				st.insertSymbol(s);
			}
			catch(AlreadyDefinesSymbolException e){
				ErrorSemantico.deteccion(e, t1);
			}
			//at.code = t1.image;
		}
		
}

